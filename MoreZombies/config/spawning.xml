<configs>
	<!-- Pine Forest -->
	<remove xpath="/spawning/biome[@name='pine_forest']" />
	<append xpath="/spawning">
		<biome name="pine_forest">
			<!-- rural -->
			<spawn maxcount="0" respawndelay="2.9" time="Day" entitygroup="ZombiesAll" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="3.3" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />
			<!-- city -->
			<spawn maxcount="0" respawndelay="0.3" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.15" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />
			<!-- downtown -->
			<spawn maxcount="0" respawndelay="0.3" time="Day" entitygroup="ZombiesForestDowntown" tags="downtown" />
			<spawn maxcount="0" respawndelay="0.1" time="Night" entitygroup="ZombiesForestDowntownNight" tags="downtown" />
			<!-- animal -->
			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<spawn maxcount="1" respawndelay="1" time="Night" entitygroup="EnemyAnimalsForest" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<!-- boss mob -->
			<!-- <spawn maxcount="8" respawndelay="28" time="Night" entitygroup="WolfPack" spawnDeadChance="0" notags="commercial,industrial,downtown" /> -->
		</biome>
	</append>
	<!-- Burnt Forest -->
	<remove xpath="/spawning/biome[@name='burnt_forest']" />
	<append xpath="/spawning">
		<biome name="burnt_forest">
			<spawn maxcount="0" respawndelay="2.8" time="Day" entitygroup="ZombiesBurntForest" />
			<spawn maxcount="0" respawndelay="3.2" time="Night" entitygroup="ZombiesNight" />
			<spawn maxcount="0" respawndelay="0.25" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.15" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.15" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="0" respawndelay="0.1" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0.33" notags="commercial,industrial,downtown" />
			<spawn maxcount="2" respawndelay="1.1" time="Night" entitygroup="EnemyAnimalsBurntForest" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<!-- boss mob -->
			<!-- <spawn maxcount="8" respawndelay="28" time="Night" entitygroup="ZombieDogGroup" spawnDeadChance="0" /> -->
		</biome>
	</append>
	<!-- Desert -->
	<remove xpath="/spawning/biome[@name='desert']" />
	<append xpath="/spawning">
		<biome name="desert">
			<spawn maxcount="0" respawndelay="2.7" time="Any" entitygroup="ZombiesAll" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="2.1" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="0.2" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.1" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.2" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="0" respawndelay="0.09" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="1" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<spawn maxcount="2" respawndelay="3.5" time="Any" entitygroup="EnemyAnimalsDesert" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<!-- boss mob -->
			<!-- <spawn maxcount="12" respawndelay="28" time="Night" entitygroup="VultureGroup" spawnDeadChance="0" /> -->
		</biome>
	</append>
	<!-- Snow -->
	<remove xpath="/spawning/biome[@name='snow']" />
	<append xpath="/spawning">
		<biome name="snow">
			<spawn maxcount="0" respawndelay="2.6" time="Any" entitygroup="SnowZombies" notags="downtown" />
			<spawn maxcount="0" respawndelay="1.7" time="Night" entitygroup="ZombiesNight" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="0.09" time="Day" entitygroup="ZombiesAll" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.06" time="Night" entitygroup="ZombiesNight" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.07" time="Day" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="0" respawndelay="0.04" time="Night" entitygroup="ZombiesDowntown" tags="downtown" />
			<spawn maxcount="4" respawndelay="1" time="Any" entitygroup="WildGameForest" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<spawn maxcount="2" respawndelay="3.1" time="Any" entitygroup="EnemyAnimalsSnow" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<!-- boss mob -->
			<!-- <spawn maxcount="5" respawndelay="28" time="Night" entitygroup="animalDireWolf" spawnDeadChance="0" /> -->
		</biome>
	</append>
	<!-- Wasteland -->
	<remove xpath="/spawning/biome[@name='wasteland']" />
	<append xpath="/spawning">
		<biome name="wasteland">
			<spawn maxcount="0" respawndelay="0.3" time="Day" entitygroup="ZombiesWasteland" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="0.001" time="Night" entitygroup="ZombiesWastelandNight" notags="commercial,industrial,downtown" />
			<spawn maxcount="0" respawndelay="0.033" time="Day" entitygroup="ZombiesWasteland" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.002" time="Night" entitygroup="ZombiesWastelandNight" tags="commercial,industrial" notags="downtown" />
			<spawn maxcount="0" respawndelay="0.0167" time="Day" entitygroup="ZombiesWastelandDowntown" tags="downtown" />
			<spawn maxcount="0" respawndelay="0.002" time="Night" entitygroup="ZombiesWastelandDowntown" tags="downtown" />
			<spawn maxcount="2" respawndelay="0.3" time="Any" entitygroup="EnemyAnimalsWasteland" spawnDeadChance="0" notags="commercial,industrial,downtown" />
			<!-- boss mob -->
			<!-- <spawn maxcount="5" respawndelay="28" time="Night" entitygroup="animalZombieBear" spawnDeadChance="0" /> -->
		</biome>
	</append>
	<!-- Roaming Hordes -->
	<remove xpath="/spawning/entityspawner[@name='RoamingHordeSpawnDay']" />
	<remove xpath="/spawning/entityspawner[@name='RoamingHordeSpawnNight']" />
	<append xpath="/spawning">
		<entityspawner name="RoamingHordeSpawnDay" dynamic="true" wrapMode="clamp">
			<day value="0,6">
				<property name="EntityGroupName" value="ZombiesAll" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="0" />
				<property name="TotalPerWave" value="0" />
			</day>
			<day value="7,13">
				<property name="EntityGroupName" value="ZombiesAll" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="256" />
				<property name="TotalPerWave" value="64,256" />
			</day>
			<day value="14,20">
				<property name="EntityGroupName" value="ZombiesAll" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="512" />
				<property name="TotalPerWave" value="128,512" />
			</day>
			<day value="21,27">
				<property name="EntityGroupName" value="ZombiesAll" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="720" />
				<property name="TotalPerWave" value="256,720" />
			</day>
			<day value="*">
				<!-- last day repeats -->
				<property name="ResetToday" value="true" />
				<property name="EntityGroupName" value="ZombiesAll" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="1024" />
				<property name="TotalPerWave" value="512,1024" />
			</day>
		</entityspawner>
		<entityspawner name="RoamingHordeSpawnNight" dynamic="true" wrapMode="clamp">
			<day value="1,4">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="0" />
				<property name="TotalPerWave" value="0" />
			</day>
			<day value="5,8">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="64" />
				<property name="TotalPerWave" value="8,64" />
			</day>
			<day value="9,16">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="256" />
				<property name="TotalPerWave" value="32,256" />
			</day>
			<day value="17,64">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="1024" />
				<property name="TotalPerWave" value="128,1024" />
			</day>
			<day value="*">
				<property name="ResetToday" value="true" />
				<property name="EntityGroupName" value="ZombiesWastelandNight" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="1024" />
				<property name="TotalPerWave" value="512,1024" />
			</day>
		</entityspawner>
	</append>
	<!-- Feral (Bloodmoon?) Hordes -->
	<set xpath="/spawning/entityspawner[@name='NightHorde']/day[@value &gt; 0]/property[@name='DelayBetweenSpawns']/@value">
		0
	</set>
	<set xpath="/spawning/entityspawner[@name='NightHorde']/day[@value &gt; 0]/property[@name='TotalAlive']/@value">
		2048
	</set>
	<set xpath="/spawning/entityspawner[@name='NightHorde']/day[@value &gt; 0]/property[@name='TotalPerWave']/@value">
		256,2048
	</set>
	<!-- Scout Hordes -->
	<remove xpath="/spawning/entityspawner[@name='HordeMeterDynamicSpawnDay']" />
	<remove xpath="/spawning/entityspawner[@name='HordeMeterDynamicSpawnNight']" />
	<append xpath="/spawning">
		<entityspawner name="HordeMeterDynamicSpawnDay" dynamic="true" wrapMode="clamp">
			<day value="1,3">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="0" />
				<property name="TotalPerWave" value="0" />
			</day>
			<day value="*">
				<property name="ResetToday" value="true" />
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="4" />
				<property name="TotalAlive" value="128" />
				<property name="TotalPerWave" value="16,128" />
			</day>
		</entityspawner>
		<entityspawner name="HordeMeterDynamicSpawnNight" dynamic="true" wrapMode="clamp">
			<day value="1,6">
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="0" />
				<property name="TotalAlive" value="0" />
				<property name="TotalPerWave" value="0" />
			</day>
			<day value="*">
				<property name="ResetToday" value="true" />
				<property name="EntityGroupName" value="ZombiesNight" />
				<property name="Time" value="Any" />
				<property name="DelayBetweenSpawns" value="1" />
				<property name="TotalAlive" value="256" />
				<property name="TotalPerWave" value="64,256" />
			</day>
		</entityspawner>
	</append>
</configs>
